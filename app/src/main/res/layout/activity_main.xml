<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.the3ballsoft.sibaf.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SIBAF"
            android:id="@+id/lblSibaf"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.07" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar huellas"
            android:id="@+id/btnRegistrarHuellas"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="registrarHuellas" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Importar datos"
            android:id="@+id/btnImportarDatos"
            android:layout_below="@+id/btnRegistrarHuellas"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/btnRegistrarHuellas"
            android:layout_alignEnd="@+id/btnRegistrarHuellas"
            android:onClick="importarDatos" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exportar datos"
            android:id="@+id/btnExportarDatos"
            android:layout_below="@+id/btnImportarDatos"
            android:layout_alignRight="@+id/btnImportarDatos"
            android:layout_alignEnd="@+id/btnImportarDatos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="exportarDatos" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:id="@+id/btnSalir"
            android:layout_below="@+id/btnExportarDatos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/btnExportarDatos"
            android:layout_alignEnd="@+id/btnExportarDatos"
            android:onClick="salir" />
    </LinearLayout>

</RelativeLayout>
